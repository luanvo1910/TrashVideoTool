{
  "name": "trash-video-editor",
  "version": "1.1.6",
  "description": "Ứng dụng tự động cắt và dựng video rác từ YouTube",
  "main": "main.js",
  "scripts": {
    "dev:renderer": "npm run dev --prefix renderer",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "npm run build --prefix renderer",
    "build:electron": "electron-builder",
    "build": "npm run build:renderer && npm run build:electron",
    "publish": "npm run build && electron-builder --publish always"
  },
  "keywords": [],
  "author": "LuanVo",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^7.0.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.luanvo.trashtool",
    "productName": "Trash Video Maker by RedBi",

    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts",
        "to": ".",
        "filter": [
          "*.py"
        ]
      }
    ],

    "win": {
      "target": "nsis",
      "icon": "resources/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "luanvo1910",
      "repo": "TrashVideoTool"
    }
  }
}